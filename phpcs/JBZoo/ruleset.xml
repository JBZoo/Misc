<?xml version="1.0"?>
<ruleset name="JBZoo">
    <description>The JBZoo coding standard (PSR1 + PSR2 + minor fixes).</description>

    <arg name="tab-width" value="4"/>
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>

</ruleset>
